# =============================================================================
# Credible.ai Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# Database
# For local development: postgresql+asyncpg://user:password@localhost:5432/credible
# For Railway/Supabase: Use the provided connection string
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/credible

# Redis (optional for MVP - used for caching)
# REDIS_URL=redis://localhost:6379

# Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Application Security
SECRET_KEY=change-me-to-a-random-256-bit-string

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,https://credible.ai

# API Settings
API_TITLE=Credible.ai
API_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
